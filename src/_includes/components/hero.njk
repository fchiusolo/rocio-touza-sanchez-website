<!-- Hero Section -->
<section id="inicio" class="pt-32 pb-20 bg-gradient-to-br from-forest-green/10 to-cream">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="order-2 md:order-1">
                <h1 class="text-5xl md:text-6xl font-playfair text-navy mb-6 leading-tight">{{ t.hero.title }}</h1>
                <p class="text-xl text-gray-700 mb-8 leading-relaxed">{{ t.hero.subtitle }}</p>

                <!-- Session Info (Price & Duration) -->
                <div class="flex flex-wrap items-center gap-6 mb-6 text-gray-700">
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-forest-green" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"/>
                        </svg>
                        <span class="font-semibold">{{ t.hero.sessionDuration }}</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-forest-green" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M7,15H9C9,16.08 10.37,17 12,17C13.63,17 15,16.08 15,15C15,13.9 13.96,13.5 11.76,12.97C9.64,12.44 7,11.78 7,9C7,7.21 8.47,5.69 10.5,5.18V3H13.5V5.18C15.53,5.69 17,7.21 17,9H15C15,7.92 13.63,7 12,7C10.37,7 9,7.92 9,9C9,10.1 10.04,10.5 12.24,11.03C14.36,11.56 17,12.22 17,15C17,16.79 15.53,18.31 13.5,18.82V21H10.5V18.82C8.47,18.31 7,16.79 7,15Z"/>
