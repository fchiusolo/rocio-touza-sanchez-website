<!-- Services Section - ACCORDION VERSION -->
<section id="servicios" class="py-20 bg-cream">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl md:text-5xl font-playfair font-bold text-navy mb-6 text-center">{{ t.services.title }}</h2>
        <p class="text-xl text-gray-600 mb-12 text-center max-w-3xl mx-auto">{{ t.services.subtitle | nl2br | safe }}</p>

        <div class="space-y-4">
            {% for category in t.services.categories %}
            {% set categoryIndex = loop.index %}
            <!-- Category {{ loop.index }}: {{ category.name }} -->
            <div class="accordion-item bg-white rounded-2xl shadow-md overflow-hidden">
                <button class="accordion-header w-full flex items-center justify-between p-6 text-left hover:bg-{% if categoryIndex == 1 %}forest-green{% elif categoryIndex == 2 %}sage{% else %}navy{% endif %}/5 transition"
                        onclick="toggleAccordion(this)">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-{% if categoryIndex == 1 %}forest-green{% elif categoryIndex == 2 %}sage{% else %}navy{% endif %}/20 rounded-full flex items-center justify-center flex-shrink-0">
                            <svg class="w-6 h-6 text-{% if categoryIndex == 1 %}forest-green{% elif categoryIndex == 2 %}sage{% else %}navy{% endif %}" fill="currentColor" viewBox="0 0 24 24">
                                {% if categoryIndex == 1 %}
                                <path d="M12,2C6.47,2 2,6.5 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"/>
                                {% elif categoryIndex == 2 %}
                                <path d="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z"/>
                                {% else %}
                                <path d="M16,11C17.66,11 18.99,9.66 18.99,8C18.99,6.34 17.66,5 16,5C14.34,5 13,6.34 13,8C13,9.66 14.34,11 16,11M8,11C9.66,11 10.99,9.66 10.99,8C10.99,6.34 9.66,5 8,5C6.34,5 5,6.34 5,8C5,9.66 6.34,11 8,11M8,13C5.67,13 1,14.17 1,16.5V19H15V16.5C15,14.17 10.33,13 8,13M16,13C15.71,13 15.38,13.02 15.03,13.05C16.19,13.89 17,15.02 17,16.5V19H23V16.5C23,14.17 18.33,13 16,13Z"/>
                                {% endif %}
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl md:text-2xl font-playfair font-semibold text-navy">{{ category.name }}</h3>
                            <p class="text-sm text-gray-500 mt-1">{{ category.description }}</p>
                        </div>
                    </div>
                    <svg class="accordion-icon w-6 h-6 text-navy transition-transform" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
                    </svg>
                </button>

                <div class="accordion-content hidden">
                    <div class="p-6 pt-0 grid md:grid-cols-2 gap-4">
                        {% for item in category.items %}
                        <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-lg">
                            <svg class="w-5 h-5 text-{% if categoryIndex == 1 %}forest-green{% elif categoryIndex == 2 %}sage{% else %}navy{% endif %} mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12,2C6.47,2 2,6.5 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"/>
                            </svg>
                            <div>
                                <h4 class="font-semibold text-navy mb-1">{{ item.title }}</h4>
                                <p class="text-sm text-gray-600">{{ item.description }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
