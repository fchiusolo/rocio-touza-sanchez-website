<!-- Booking Section -->
<section id="reservar" class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl md:text-5xl font-playfair font-bold text-navy mb-6 text-center">{{ t.book.title }}</h2>
        <p class="text-xl text-gray-600 mb-12 text-center max-w-3xl mx-auto">{{ t.book.subtitle }}</p>

        <!-- Direct Contact Booking (Cookie-Free) -->
        <div class="max-w-2xl mx-auto">
            <div class="grid md:grid-cols-2 gap-6 justify-items-center">
                <!-- WhatsApp -->
                <a href="https://wa.me/34633779016?text={{ t.contact.whatsappMessage | urlencode }}"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="flex flex-col items-center gap-4 p-8 bg-gradient-to-br from-[#25D366]/10 to-[#25D366]/5 rounded-2xl border-2 border-[#25D366]/20 hover:border-[#25D366] hover:shadow-lg transition w-full max-w-sm">
                    <div class="w-16 h-16 bg-[#25D366] rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                        </svg>
                    </div>
                    <div class="text-center">
                        <h4 class="text-xl font-semibold text-gray-900 mb-2">{{ t.book.whatsappCta }}</h4>
                        <p class="text-gray-600 mb-3">{{ t.book.whatsappSubtitle }}</p>
                        <span class="inline-block px-4 py-2 bg-[#25D366] text-white rounded-full font-semibold">{{ t.book.whatsappButton }}</span>
                    </div>
                </a>

                <!-- Email -->
                <a href="mailto:{{ t.site.email }}?subject={{ t.contact.emailSubject | urlencode }}&body={{ t.contact.emailBody | urlencode }}"
                   class="flex flex-col items-center gap-4 p-8 bg-gradient-to-br from-navy/10 to-navy/5 rounded-2xl border-2 border-navy/20 hover:border-navy hover:shadow-lg transition w-full max-w-sm">
                    <div class="w-16 h-16 bg-navy rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"/>
                        </svg>
                    </div>
                    <div class="text-center">
                        <h4 class="text-xl font-semibold text-gray-900 mb-2">{{ t.book.emailCta }}</h4>
                        <p class="text-gray-600 mb-3">{{ t.book.emailSubtitle }}</p>
                        <span class="inline-block px-4 py-2 bg-navy text-white rounded-full font-semibold">{{ t.book.emailButton }}</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Google Review CTA Section -->
<section id="reviews" class="py-12 md:py-16 bg-gradient-to-br from-sage/30 to-cream/50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">

        <!-- Star Icon Cluster -->
        <div class="flex gap-1 mb-4 justify-center opacity-80">
            {% for i in range(5) %}
            <svg class="w-5 h-5 text-forest-green" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z"/>
            </svg>
            {% endfor %}
        </div>

        <!-- Heading -->
        <h3 class="text-3xl md:text-4xl font-playfair font-semibold text-navy mb-4">{{ t.reviews.title }}</h3>

        <!-- Subheading -->
        <p class="text-lg text-gray-700 mb-6 leading-relaxed max-w-2xl mx-auto">{{ t.reviews.subtitle }}</p>

        <!-- CTA Button -->
        <a href="{{ t.reviews.googleMapsUrl }}"
           target="_blank"
           rel="noopener noreferrer"
           class="inline-flex items-center gap-2 px-6 py-3 bg-forest-green/90 text-white rounded-full font-semibold hover:bg-forest-green transition shadow-md hover:shadow-lg hover:-translate-y-1 duration-200"
           aria-label="{% if lang == 'es' %}Dejar reseÃ±a en Google Maps{% else %}Leave review on Google Maps{% endif %}">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.06,9L15,9.94L5.92,19H5V18.08L14.06,9M17.66,3C17.41,3 17.15,3.1 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18.17,3.09 17.92,3 17.66,3M14.06,6.19L3,17.25V21H6.75L17.81,9.94L14.06,6.19Z"/>
            </svg>
            <span>{{ t.reviews.ctaText }}</span>
        </a>

    </div>
</section>
