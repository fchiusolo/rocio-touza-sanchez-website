<!-- FAQ Section -->
<section id="faq" class="py-20 bg-cream">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
            <h2 class="text-4xl md:text-5xl font-playfair font-bold text-navy mb-4">{{ t.faq.title }}</h2>
            <p class="text-xl text-gray-600">{{ t.faq.subtitle }}</p>
        </div>

        <!-- FAQ Accordion -->
        <div class="space-y-4">
            {% for item in t.faq.items %}
            <!-- Question {{ loop.index }} -->
            <div class="faq-item bg-white rounded-xl border border-gray-200 overflow-hidden">
                <button class="faq-question w-full text-left px-6 py-5 flex justify-between items-center hover:bg-forest-green/5 transition group"
                        aria-expanded="false">
                    <span class="font-semibold text-navy text-lg pr-4">{{ item.question }}</span>
                    <svg class="faq-icon w-6 h-6 text-forest-green transform transition-transform flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
                    </svg>
                </button>
                <div class="faq-answer px-6 pb-5 text-gray-700 leading-relaxed hidden">
                    {% if item.question == t.faq.items[6].question %}
                    {# Special handling for confidentiality question with privacy policy link #}
                    <p>{{ item.answer }}</p>
                    <p class="mt-2">
                        <a href="{{ t.footer.privacyUrl }}" class="text-forest-green hover:underline font-medium">
                            {% if lang == "es" %}Ver Política de Privacidad →{% else %}See Privacy Policy →{% endif %}
                        </a>
                    </p>
                    {% else %}
                    <p>{{ item.answer }}</p>
                    {% endif %}
                </div>
            </div>
            {% endfor %}

        </div>

    </div>
</section>
