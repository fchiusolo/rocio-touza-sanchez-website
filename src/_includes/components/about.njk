<!-- About Me Section -->
<section id="sobre-mi" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl md:text-5xl font-playfair font-bold text-navy mb-12 text-center">{{ t.about.title }}</h2>

        <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed space-y-6">
            {% for paragraph in t.about.bio %}
            <p>{{ paragraph }}</p>
            {% endfor %}
        </div>

        <!-- Credentials & Education -->
        <div class="mt-12 pt-8 border-t border-gray-200">
            <div class="max-w-4xl mx-auto">
                <h3 class="text-2xl font-playfair font-semibold text-navy mb-4 text-center">
                    {% if lang == "es" %}Formación y Credenciales{% else %}Education & Credentials{% endif %}
                </h3>
                <p class="text-gray-600 leading-relaxed text-center mb-4">
                    <span>{{ t.about.credentials }}</span>
                </p>
                <div class="text-sm text-gray-500 space-y-2">
                    {% if t.about.training %}
                        {% set trainingItems = t.about.training | split("|") %}
                        {% for item in trainingItems %}
                        <p>• {{ item | trim }}</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
