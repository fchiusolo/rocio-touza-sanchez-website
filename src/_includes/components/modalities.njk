<!-- Modalities Section -->
<section id="modalidades" class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl md:text-5xl font-playfair font-bold text-navy mb-6 text-center">{{ t.modalities.title }}</h2>
        <p class="text-xl text-gray-600 mb-12 text-center max-w-3xl mx-auto">{{ t.modalities.subtitle }}</p>

        <!-- Shared Information Grid (3 cards) -->
        <div class="grid md:grid-cols-3 gap-6 mb-16">
            <!-- Duration Card -->
            <div class="bg-forest-green/10 rounded-2xl p-8">
                <div class="flex items-start gap-4 mb-4">
                    <div class="w-12 h-12 bg-forest-green rounded-full flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-playfair font-semibold text-navy mb-2">{{ t.modalities.pricing.title }}</h3>
                        <p class="text-gray-700">{{ t.modalities.pricing.sessionDuration }}</p>
                    </div>
                </div>
            </div>

            <!-- Price Card -->
            <div class="bg-sage/10 rounded-2xl p-8">
                <div class="flex items-start gap-4 mb-4">
                    <div class="w-12 h-12 bg-sage rounded-full flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M7,15H9C9,16.08 10.37,17 12,17C13.63,17 15,16.08 15,15C15,13.9 13.96,13.5 11.76,12.97C9.64,12.44 7,11.78 7,9C7,7.21 8.47,5.69 10.5,5.18V3H13.5V5.18C15.53,5.69 17,7.21 17,9H15C15,7.92 13.63,7 12,7C10.37,7 9,7.92 9,9C9,10.1 10.04,10.5 12.24,11.03C14.36,11.56 17,12.22 17,15C17,16.79 15.53,18.31 13.5,18.82V21H10.5V18.82C8.47,18.31 7,16.79 7,15Z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-playfair font-semibold text-navy mb-2">{{ t.modalities.pricing.priceTitle }}</h3>
                        <p class="text-gray-700">{{ t.modalities.pricing.sessionPrice }}</p>
                    </div>
                </div>
            </div>

            <!-- Cancellations Card -->
            <div class="bg-forest-green/10 rounded-2xl p-8">
                <div class="flex items-start gap-4 mb-4">
                    <div class="w-12 h-12 bg-forest-green rounded-full flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-playfair font-semibold text-navy mb-2">{{ t.modalities.pricing.cancellationsTitle }}</h3>
                        <p class="text-gray-700">{{ t.modalities.pricing.cancellationsPolicy }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Online Therapy Subsection -->
        <div class="bg-forest-green/5 rounded-3xl p-8 md:p-10 mb-12">
            <!-- Heading with Badge -->
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
                <h3 class="text-2xl md:text-3xl font-playfair font-bold text-navy mb-3 md:mb-0">{{ t.modalities.online.title }}</h3>
                <span class="inline-flex items-center px-4 py-2 rounded-full bg-forest-green text-white text-sm font-semibold">{{ t.modalities.online.badge }}</span>
            </div>

            <!-- Description -->
            <p class="text-gray-700 mb-8 leading-relaxed">{{ t.modalities.online.description }}</p>

            <!-- Platform Card -->
            <div class="bg-white rounded-2xl p-8 shadow-sm">
                <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-navy rounded-full flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17,10.5V7A1,1 0 0,0 16,6H4A1,1 0 0,0 3,7V17A1,1 0 0,0 4,18H16A1,1 0 0,0 17,17V13.5L21,17.5V6.5L17,10.5Z"/>
                        </svg>
                    </div>
                    <div>
                        <h4 class="text-xl font-playfair font-semibold text-navy mb-2">{{ t.modalities.online.platform }}</h4>
                        <p class="text-gray-700">{{ t.modalities.online.platformDescription }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Visual Separator -->
        <div class="relative my-12">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t-2 border-gray-200"></div>
            </div>
            <div class="relative flex justify-center">
                <span class="bg-white px-6 py-2 rounded-full border-2 border-sage">
                    <span class="text-lg font-playfair font-semibold text-navy">{% if lang == "es" %}Tambi√©n disponible{% else %}Also available{% endif %}</span>
                </span>
            </div>
        </div>

        <!-- In-Person Therapy Subsection -->
        <div class="bg-sage/5 rounded-3xl p-8 md:p-10 mb-12">
            <!-- Heading with Badge -->
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
                <h3 class="text-xl md:text-2xl font-playfair font-bold text-navy mb-3 md:mb-0">{{ t.modalities.inPerson.title }}</h3>
                <span class="inline-flex items-center px-4 py-2 rounded-full bg-sage text-white text-sm font-semibold">{{ t.modalities.inPerson.badge }}</span>
            </div>

            <!-- Description -->
            <p class="text-gray-700 mb-8 leading-relaxed">{{ t.modalities.inPerson.description }}</p>

            <!-- Location Card -->
            <div class="bg-white rounded-2xl p-8 shadow-sm">
                <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-navy rounded-full flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12,2Z"/>
                        </svg>
                    </div>
                    <div>
                        <h4 class="text-xl font-playfair font-semibold text-navy mb-2">{{ t.modalities.inPerson.location }}</h4>
                        <p class="text-gray-700">{{ t.modalities.inPerson.locationAddress }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking CTA -->
        <div class="text-center mt-12">
            <a href="https://wa.me/34633779016?text={{ t.contact.whatsappShortMessage | urlencode }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-8 py-4 bg-forest-green text-white rounded-full font-semibold hover:bg-opacity-90 transition shadow-lg text-lg">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                <span>{{ t.hero.ctaPrimary }}</span>
            </a>
        </div>

    </div>
</section>
